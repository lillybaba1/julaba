# MEXC API Credentials for Benscript Trading Bot
# Get your API keys from: https://www.mexc.com/user/openapi

# MEXC Exchange API
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Google Gemini API (FREE tier available!)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Telegram Bot (for notifications)
# Create a bot via @BotFather on Telegram to get your token
TELEGRAM_BOT_TOKEN=your_telegram_token_here
# Send a message to your bot, then visit: https://api.telegram.org/bot<TOKEN>/getUpdates
# Look for "chat":{"id": YOUR_CHAT_ID} in the response
TELEGRAM_CHAT_ID=your_chat_id_here

# AI Filter Settings
AI_CONFIDENCE_THRESHOLD=0.7
